{
  "name": "sehat-mitra-backend",
  "version": "1.0.0",
  "description": "Backend server for Sehat Mitra telemedicine platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:algorithms": "jest --testPathPattern=algorithms",
    "test:routes": "jest --testPathPattern=routes",
    "test:models": "jest --testPathPattern=models"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^7.0.0",
    "mongodb-memory-server": "^10.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/**",
      "!server.js"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/**/__tests__/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
